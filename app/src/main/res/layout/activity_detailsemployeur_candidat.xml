<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Détails du Candidat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textViewNomPrenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom Prénom"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewNumeroTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numéro de Téléphone"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewDateNaissance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de Naissance"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewNationalite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nationalité"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewVille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ville"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CV"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Détails de l'Offre"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textViewTitreOffre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre de l'Offre"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewDescriptionOffre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description de l'Offre"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewMetier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Métier"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewLieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lieu"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewDateDebut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de Début"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewDateFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de Fin"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>
