<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewNomCandidat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du Candidat"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewEmailCandidat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email du Candidat"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewOffreTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titre de l'Offre"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepter" />

        <Button
            android:id="@+id/buttonReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refuser"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/buttonRespond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RÃ©pondre"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
