<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/light_grey"
    android:padding="16dp">

    <ImageView
        android:layout_width="206dp"
        android:layout_height="193dp"
        android:src="@drawable/travailleur"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/textView_admd_interim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMD INTERIM"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textView_votre_prochain_emploi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOTRE PROCHAIN EMPLOI COMMENCE ICI!"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:layout_marginBottom="24dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/redlight"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <Button
                    android:id="@+id/button_espace_candidat"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button"
                    android:onClick="onEspaceCandidatClick"
                    android:text="Espace Candidat"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button_espace_employeur"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:onClick="onEspaceEmployeurClick"
                    android:text="Espace Employeur"
                    android:textColor="@color/white" />

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/textView_continuer_anonymement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:onClick="onContinuerAnonymementClick"
            android:text="Continuer anonymÃ©ment"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </FrameLayout>



</LinearLayout>
